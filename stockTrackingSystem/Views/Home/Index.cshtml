            -moz-user-select: none;
            -webkit-user-drag: none;
            -webkit-user-select: none;
            -ms-user-select: none;
        }

        .card__wish-list {
            display: block;
            width: 50%;
            margin: 0 auto 15px;
            padding: 15px;
            border: 2px solid #fff;
            border-radius: 20px;
            text-align: center;
            text-transform: uppercase;
