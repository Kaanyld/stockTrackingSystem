        .card__header--huarache {
            background-color: #26C9F7;
            background-image: linear-gradient(#26C9F7, #DFFC3C);
            background: #26C9F7;
            background: linear-gradient(#26C9F7, #DFFC3C);
        }

        .card__watermark {
            overflow: hidden;
            position: absolute;
            bottom: 10px;
            left: 0;
            width: 100%;
        }

            .card__watermark::after {
                content: attr(data-watermark);
                position: relative;
                left: -20px;
                color: rgba(0, 0, 0, .3);
                font-size: 240px;
                font-weight: 700;
                text-transform: uppercase;
            }

        .card__logo {
            width: 50px;
            height: auto;
        }

        .card__price {
            float: right;
            font-size: 16px;
            font-weight: 300;
        }

        .card__title {
            margin: 35px 0 20px;
            font-size: 15px;
            line-height: 1.1em;
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .card__subtitle {
            display: block;
            font-size: 13px;
            font-weight: 300;
        }

        .card__body {
            position: relative;
            padding: 40px 30px 20px;
