            border-color: #FFBA00;
        }

        .card__wish-list--huarache {
            color: #26C9F7;
            border-color: #26C9F7;
        }

        .card__category {
            display: block;
            font-size: 12px;
            color: #AEAEAE;
            text-transform: uppercase;
            text-align: center;
        }

        .card__will-animate {
            will-change: transform;
        }

