@model stockTrackingSystem.Models.ShoppingCard
@{
    ViewBag.Title = "Purchase";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="modal-header">
    <h2>Purchase</h2>
</div>
<div class="container">
    @using (Html.BeginForm("Purchase_2", "Sales", FormMethod.Post))
    {
<div class="modal-body">
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        User Name - Last Name:@Session["Name"] @Session["LastName"]
    </div>

    <div class="form-group">
        Product Information:@Html.DisplayFor(x => x.Products.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        Piece:@Html.DisplayFor(x => x.Piece, new { @class = "form-control" })
    </div>

    <div class="form-group">
        Product Image<img src="~/Content/Images/@Model.Products.Image" width="80" height="80" />
    </div>

    <div class="form-group text-center" style="font-size:15px; color:red">
        Price:@Html.DisplayFor(x=>x.Price, new {@class="form-control"})
    </div>
</div>
        <div class="modal-footer" style="float:right">
            <button class="btn btn-success">Purchase</button>
            <a href="/ShoppingCard/Index" class="btn btn-dark">Cancel</a>
        </div>
    
    }
</div>
